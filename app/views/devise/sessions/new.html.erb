<div class="ui three column grid">
  <div class="column">

  </div>
  <div class="column">
    <div class="ui huge header">Log in</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui form'}) do |f| %>

      <div class="one field">
        <div class="required field">
          <div class="ui icon input">
            <i class="user icon"></i>
            <%= f.text_field :login, autofocus: true, placeholder: 'Username or email' %>
          </div>
        </div>
      </div>

      <div class="one field">
        <div class="required field">
          <div class="ui icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
          </div>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="two fields">
          <div class="ui checkbox field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>

          <div class="field">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
          </div>
        </div>
      <% end -%>

      <div class="one field">
        <div class="field">
          <div class="ui large buttons">
            <%= f.submit "Log in", class: 'ui teal button' %>
            <div class="or"></div>
            <%= link_to '<i class="facebook icon"></i> Log in with Facebook'.html_safe, new_user_session_path, class: 'ui facebook button' %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
  <div class="column">

  </div>
</div>
