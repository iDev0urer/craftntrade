<div class="ui huge header">Sign up</div>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui form'}) do |f| %>
  <h3 class="ui dividing header">Personal Information</h3>
  <div class="one field">
    <div class="required field">
      <label>Name</label>
      <div class="three fields">
        <div class="seven wide field">
          <%= f.text_field :first_name, autofocus: true, placeholder: 'First name', class: 'first_name genderize' %>
        </div>
        <div class="two wide field">
          <%= f.text_field :middle_initial, placeholder: 'Middle' %>
        </div>
        <div class="seven wide field">
          <%= f.text_field :last_name, placeholder: 'Last name' %>
        </div>
      </div>
    </div>
  </div>

  <div class="one field">
    <label>Gender</label>
    <div class="seven wide field">
      <%= f.select(:gender, options_for_select([['Male', 'male'], ['Female', 'female']]), {}, { class: 'ui search dropdown genderize_target' })  %>
    </div>
  </div>

  <h3 class="ui dividing header">Account Info</h3>
  <div class="two fields">
    <div class="required field">
      <label>Email</label>
      <div class="ui icon input">
        <%= f.text_field :email, placeholder: 'Email' %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="required field">
      <label>Username</label>
      <div class="ui icon input">
        <%= f.text_field :username, placeholder: 'Username' %>
        <i class="user icon"></i>
      </div>
    </div>
  </div>
  <div class="two fields">
    <div class="required field">
      <label>Password</label>
      <div class="ui icon input">
        <%= f.password_field :password, autocomplete: "off" %>
        <i class="lock icon"></i>
      </div>
    </div>
    <div class="required field">
      <label>Confirm Password</label>
      <div class="ui icon input">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <i class="lock icon"></i>
      </div>
    </div>
  </div>
  <div class="ui hidden divider"></div>
  <div class="ui error message">
    <div class="header">We noticed some issues</div>
  </div>
  <div class="ui stackable grid">
    <div class="center aligned two collumn row">

      <div class="left aligned eight wide column">
        <div class="field">
          <div class="ui checkbox">
            <%= check_box_tag :terms_of_service %>
            <label>I agree to the <a href="#">Terms of Service</a>.</label>
          </div>
        </div>
        <div class="field">
          <div class="ui checkbox">
            <input type="checkbox" name="mailing_list">
            <%= check_box_tag :mailing_list %>
            <label>Allow Craft N' Trade to send you occasional emails</label>
          </div>
        </div>
      </div>

      <div class="right aligned eight wide column">
        <div class="field">
          <div class="ui huge buttons">
            <%= submit_tag 'Sign up', class: 'ui teal button' %>
            <div class="or"></div>
            <%= link_to 'Log in', new_user_session_path, class: 'ui default button' %>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>
