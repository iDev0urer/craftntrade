source 'https://rubygems.org'

## ##
# Anything rails/ruby specific
## ##
gem 'rails', '4.2.1'
gem 'pg'
gem 'puma'
gem 'sidekiq'
gem 'sdoc', '~> 0.4.0', group: :doc

## ##
# All javascript frameworks here
## ##
gem 'jquery-rails'
gem 'turbolinks', git: 'https://github.com/rails/turbolinks.git'
gem 'jbuilder', '~> 2.0'
gem 'react-rails'
gem 'uglifier', '>= 1.3.0'

## ##
# Style specific
## ##
gem 'semantic-ui-sass', github: 'doabit/semantic-ui-sass'
gem 'sass-rails', '~> 5.0'

## ##
# Anything to do with the user
## ##
gem 'devise'
gem 'cocoon'
gem 'cancan'
gem 'aws-sdk'
gem 'paperclip'

## ##
# All the testing stuff
## ##
group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'minitest'
end
